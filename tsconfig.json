{
    "compilerOptions": {
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "target": "ES2023",
        "moduleResolution": "Node10",
        "module": "CommonJS",
        "declaration": true,
        "isolatedModules": true,
        "noEmit": true,
        "declarationDir": "dist",
        "outDir": "dist",
        "allowJs": true,
        "jsx": "react-jsx"
    },
    "include": ["src/**/*", "dist/**/*.css", "tsup.config.tsx", "tsup.config.ts"],
    "exclude": ["node_modules"]
}